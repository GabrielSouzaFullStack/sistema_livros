# Arquivo de exemplo para configurações de banco de dados
# Copie este arquivo para 'config.properties' e configure suas credenciais

# =============================================================================
# CONFIGURAÇÕES PARA AMBIENTE DE DESENVOLVIMENTO LOCAL
# =============================================================================

# Configurações MySQL (ajuste conforme sua instalação local)
mysql.host=localhost
mysql.porta=3306
mysql.database=livros
mysql.usuario=root
mysql.senha=SUA_SENHA_MYSQL_AQUI
mysql.driver=com.mysql.cj.jdbc.Driver

# Configurações PostgreSQL (ajuste conforme sua instalação local)
postgresql.host=localhost
postgresql.porta=5432
postgresql.database=livros
postgresql.usuario=postgres
postgresql.senha=SUA_SENHA_POSTGRESQL_AQUI
postgresql.driver=org.postgresql.Driver

# =============================================================================
# EXEMPLO PARA AMBIENTE DE PRODUÇÃO
# =============================================================================

# Configurações MySQL - Produção
mysql.prod.host=SEU_SERVIDOR_PRODUCAO
mysql.prod.porta=3306
mysql.prod.database=livros_prod
mysql.prod.usuario=USUARIO_PRODUCAO
mysql.prod.senha=SENHA_PRODUCAO

# Configurações PostgreSQL - Produção
postgresql.prod.host=SEU_SERVIDOR_PRODUCAO
postgresql.prod.porta=5432
postgresql.prod.database=livros_prod
postgresql.prod.usuario=USUARIO_PRODUCAO
postgresql.prod.senha=SENHA_PRODUCAO
